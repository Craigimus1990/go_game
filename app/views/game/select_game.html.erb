<div class="banner">
	<%= "Hello, #{@current_player.name}!" %>
</div>

<div id="games_box">
	<div class="title">Here are your games:</div>
	<div id="current_games">
		<div class="title">Current games</div>
		<% @current_games.each do |game| %>
			<div class="game_row">
				<span class="game_id">Game ID: <%= game.id %></span>
				<span class="black_player_id">Black Player: <%= game.black_player_id == nil ? "[OPEN]" : Player.find_by_id(game.black_player_id).name %></span> <!-- SHUT UP I KNOW HOW BAD THIS IS I'M LAZY -->
				<span class="white_player_id">White Player: <%= game.white_player_id == nil ? "[OPEN]" : Player.find_by_id(game.white_player_id).name %></span>
				<span class="link_to_game"><%= link_to "Open Game", action: "show", id: game.id  %></span>
			</div>
		<% end %>
	</div>

	<br>

	<div id="open_games">
		<div class="title">Open games</div>
		<% @open_games.each do |game| %>
			<div class="game_row">
				<span class="game_id"><%= game.id %></span>
				<span class="black_player_id"><%= game.black_player_id == nil ? "[OPEN]" : Player.find_by_id(game.black_player_id).name %></span>
				<span class="white_player_id"><%= game.white_player_id == nil ? "[OPEN]" : Player.find_by_id(game.white_player_id).name %></span>
				<span class="link_to_game"><%= link_to "Open Game", action: "show", id: game.id  %></span>
			</div>
		<% end %>
	</div>
			
</div>
